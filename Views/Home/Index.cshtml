@{
    ViewData["Title"] = "Welcome to Event Management";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Welcome to Event Management</h1>
            <p>Manage your events efficiently with ease! Our platform helps you create, organize, and participate in events all in one place.</p>
            <p>Whether you're an event organizer or a participant, our platform provides tools for easy event management and registration. Get started now and explore the upcoming events.</p>

            <h2>Features:</h2>
            <ul>
                <li>Create and manage your events.</li>
                <li>Sign up for events you're interested in.</li>
                <li>View event details, including the organizer's information and event participants.</li>
                <li>Cancel your registration if your plans change.</li>
            </ul>

            <h2>Why Choose Us?</h2>
            <p>We are committed to providing an intuitive and easy-to-use platform. Our goal is to make event management simple and accessible to everyone.</p>

            <h3>Start Creating Events Today!</h3>
            <a href="@Url.Action("Create", "Event")" class="btn btn-primary">Create Your First Event</a>
        </div>
    </div>
</div>
